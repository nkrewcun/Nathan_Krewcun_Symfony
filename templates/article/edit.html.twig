{% extends 'base.html.twig' %}

{% block title %}Modifier un article - Le Progr√®s{% endblock %}

{% block body %}
    <div class="text-center">
        <h1>Modifier un article</h1>

        {{ form_start(form) }}
        <div class="form-article">
            <div class="form-group">
                {{ form_label(form.title) }}
                {{ form_widget(form.title) }}
                {{ form_errors(form.title) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>
            <div class="form-group">
                {{ form_label(form.picture) }}
                {{ form_widget(form.picture) }}
                {{ form_errors(form.picture) }}
                {% if originalPicture is defined %}
                    <img src="{{ asset('articles/pictures/' ~ originalPicture) }}" alt="{{ article.title }}">
                {% endif %}
            </div>
            <button class="btn btn-lg btn-primary">{{ button_label|default('Ajouter') }}</button>
            <a href="{{ path('article_index') }}" class="btn btn-lg btn-secondary">Retour</a>
        </div>
        {{ form_end(form) }}

    </div>
{% endblock %}
