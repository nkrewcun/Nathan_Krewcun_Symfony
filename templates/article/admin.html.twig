{% extends 'base.html.twig' %}

{% block title %}Administration des articles - Le Progrès{% endblock %}

{% block body %}
    <div class="ml-4 text-center">
        <h2>Liste des articles</h2>
        <a href="{{ path('article_new') }}" class="btn btn-secondary mb-2">Ajouter un article</a>
        <table class="table table-responsive">
            <thead>
            <tr>
                <th>Image</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date de publication</th>
                <th>Date de dernière modification</th>
                <th>Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for article in articles %}
                <tr>
                    <td><img src="{{ asset('articles/pictures/' ~ article.picture) }}" alt="{{ article.title }}" height="100px" width="100px"></td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.description | slice(0,50) }}...</td>
                    <td>{{ article.publicationDate | format_datetime(locale='fr') }}</td>
                    <td>{{ article.lastModificationDate | format_datetime(locale='fr') }}</td>
                    <td>
                        <a href="{{ path('article_show', {'id' : article.id}) }}"
                           class="btn btn-primary">Voir</a>
                        <a href="{{ path('article_edit', {'id' : article.id}) }}" class="btn btn-warning">Modifier</a>
                        <a href="{{ path('article_delete', {'id' : article.id}) }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
